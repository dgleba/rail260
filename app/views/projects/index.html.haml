%h1= Project.model_name.human

.row
  .col-sm-5.col-sm-offset-7
    = search_form_for @q, class: 'search-form' do |f|
      .input-group
        = f.search_field :name_cont, class: 'form-control'
        %span.input-group-btn
          %button.btn.btn-primary
            %i.fa.fa-search

%table.table.table-striped
  %thead
    %tr
      %th= sort_link(@q, :name, Project.human_attribute_name(:name))
      %th= sort_link(@q, :description, Project.human_attribute_name(:description))
      %th
      %th
      %th

  %tbody
    - @projects.each do |project|
      %tr
        %td= project.name
        %td= project.description
        %td= link_to t('actions.show'), project
        %td= link_to t('actions.edit'), edit_project_path(project)
        %td= link_to t('actions.delete'), project, method: :delete, data: { confirm: t('actions.delete_question') }


= paginate @projects

= link_to t('actions.create'), new_project_path, class: 'btn btn-primary'
