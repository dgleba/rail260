.container-fluid

.row
  .col-sm-6.col-md-5.col-lg-4{:style => "background-color:white;"}
    %ul.list-inline
      %li
        = link_to t('actions.create'), new_pasenger_list_path, class: 'btn btn-primary'
      %li 
        %h4{:class => "vcenter", :style => "color:black;margin-left:1px;"}= PasengerList.model_name.human
  .col-sm-6.col-md-5.col-lg-4{:style => "background-color:white;"}
    = search_form_for @q, class: 'search-form ' do |f|
      .input-group
        = f.search_field :clocknum_cont, class: 'form-control'
        %span.input-group-btn
          %button.btn.btn-primary
            %i.fa.fa-search    
            
= paginate @pasenger_lists
    
 
%table.table.table-striped
  %thead
    %tr
      %th
      %th
      %th= sort_link(@q, :clocknum, PasengerList.human_attribute_name(:clocknum))
      %th= sort_link(@q, :name, PasengerList.human_attribute_name(:name))
      %th= sort_link(@q, :active, PasengerList.human_attribute_name(:active))
      %th= sort_link(@q, :passenger, PasengerList.human_attribute_name(:passenger))

  %tbody
    - @pasenger_lists.each do |pasenger_list|
      %tr
        %td= link_to t('actions.show'), pasenger_list, class: 'btn btn-primary'
        %td= link_to t('actions.edit'), edit_pasenger_list_path(pasenger_list)
        %td= pasenger_list.clocknum
        %td= pasenger_list.name
        %td= pasenger_list.active
        %td= pasenger_list.passenger

= paginate @pasenger_lists
