%h1= Job.model_name.human

.row
  .col-sm-5.col-sm-offset-7
    = search_form_for @q, class: 'search-form' do |f|
      .input-group
        = f.search_field :description_cont, class: 'form-control'
        %span.input-group-btn
          %button.btn.btn-primary
            %i.fa.fa-search

%table.table.table-striped
  %thead
    %tr
      %th= sort_link(@q, :description, Job.human_attribute_name(:description))
      %th= sort_link(@q, :done, Job.human_attribute_name(:done))
      %th= sort_link(@q, :project, Job.human_attribute_name(:project))
      %th
      %th
      %th

  %tbody
    - @jobs.each do |job|
      %tr
        %td= job.description
        %td= job.done
        %td= job.project
        %td= link_to t('actions.show'), job
        %td= link_to t('actions.edit'), edit_job_path(job)
        %td= link_to t('actions.delete'), job, method: :delete, data: { confirm: t('actions.delete_question') }


= paginate @jobs

= link_to t('actions.create'), new_job_path, class: 'btn btn-primary'
